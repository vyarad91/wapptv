    })(window,document,'script','dataLayer','GTM-K33Q5NZ');

  //- Facebook Meta Tags
  meta(property="og:title", content="Somos WappTV")
  meta(property="og:description",content="El primer canal con perspectiva de género en Chile")
  meta(property="og:image", content="/images/social-media.png")
  meta(property="og:url", content="https://www.wapptv.cl/")
  meta(property="og:site_name", content="Wapp Media")
  //- Twitter Meta Tags
  meta(name="twitter:title", content="Somos WappTV")
  meta(name="twitter:description", content="El primer canal con perspectiva de género en Chile")
  meta(name="twitter:image", content="/images/social-media.png")
  meta(name="twitter:card", content="summary_large_image")
  
  link(rel='icon', type='image/x-icon', href='/favicon.ico')
  link(rel='preconnect', href='https://fonts.gstatic.com') 
  link(href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap', rel='stylesheet')
  block stylesheets
    link(rel='stylesheet', href= baseUrl + 'styles/main.css')

